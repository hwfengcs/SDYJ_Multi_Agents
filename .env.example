# ========================================
# SDYJ Deep Research System Configuration
# ========================================

# -----------------
# LLM Configuration
# -----------------

# Choose your LLM provider: openai, claude, gemini, deepseek
LLM_PROVIDER=deepseek

# Optional: Specify model name (if not set, uses provider default)
# LLM_MODEL=gpt-4
# LLM_MODEL=claude-3-5-sonnet-20241022
# LLM_MODEL=gemini-pro
# LLM_MODEL=deepseek-chat

# LLM Generation Parameters
LLM_TEMPERATURE=0.7
# LLM_MAX_TOKENS=4096

# -----------------
# API Keys
# -----------------

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude) API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (Gemini) API Key
GOOGLE_API_KEY=your_google_api_key_here

# -----------------
# Search Tools
# -----------------

# Tavily Search API Key (for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# MCP Server Configuration (optional)
# MCP_SERVER_URL=http://localhost:8000
# MCP_API_KEY=your_mcp_api_key_here

# -----------------
# Workflow Settings
# -----------------

# Maximum number of research iterations
MAX_ITERATIONS=5

# Auto-approve research plan (skip user approval)
AUTO_APPROVE_PLAN=false

# Output directory for generated reports
OUTPUT_DIR=./outputs
